<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.trio.app.activities.MainActivity">

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/buy_main_lll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@color/colorPrimary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <TextView
                    android:visibility="gone"
                    android:id="@+id/cnfsalemnl_tv_total_avail_coins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/yellow_outbox"
                    android:padding="10dp"
                    android:textColor="@color/yellow"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/cnfsalemnl_tv_user_available_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/white_outbox"
                    android:padding="10dp"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7.5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp"
                android:weightSum="9.2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".35"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center_vertical|left"
                            android:padding="5dp"
                            android:text="Name"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/cnfsalemnl_tv_name"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight=".65"
                            android:background="@drawable/captcha_background"
                            android:padding="5dp" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".35"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center_vertical|left"
                            android:padding="5dp"
                            android:text="Username"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/cnfsalemnl_tv_username"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight=".65"
                            android:background="@drawable/captcha_background"
                            android:padding="5dp" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".35"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center_vertical|left"
                            android:padding="5dp"
                            android:text="No.of Sale Coin"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/cnfsalemnl_tv_noofsalecoin"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight=".65"
                            android:background="@drawable/captcha_background"
                            android:padding="5dp" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".35"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center_vertical|left"
                            android:padding="5dp"
                            android:text="Unit Cost"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/cnfsalemnl_tv_unitcost"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight=".65"
                            android:background="@drawable/captcha_background"
                            android:padding="5dp" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".35"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center_vertical|left"
                            android:padding="5dp"
                            android:text="Amount"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/cnfsalemnl_tv_amount"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight=".65"
                            android:background="@drawable/captcha_background"
                            android:padding="5dp" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".35"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center_vertical|left"
                            android:padding="5dp"
                            android:text="Commission"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/cnfsalemnl_tv_commission"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight=".65"
                            android:background="@drawable/captcha_background"
                            android:padding="5dp" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".35"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center_vertical|left"
                            android:padding="5dp"
                            android:text="Sale Amount"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/cnfsalemnl_tv_sale_amount"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight=".65"
                            android:background="@drawable/captcha_background"
                            android:padding="5dp" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".35"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center_vertical|left"
                            android:padding="5dp"
                            android:text="Status"
                            android:textColor="@android:color/black" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight=".65"
                            android:background="@drawable/captcha_background">

                            <Spinner
                                android:gravity=""
                                android:id="@+id/cnfsalemnl_tv_status"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_weight=".65"
                                android:entries="@array/array_status"
                                />
                        </RelativeLayout>

                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1.2">

                    <Button
                        android:id="@+id/cnfsalemnl_btn_confirm"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_background"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Confirm"
                        android:textAllCaps="false"
                        android:textColor="@color/yellow"
                        android:textSize="16sp" />
                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
